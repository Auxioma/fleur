{% block javascripts %}
<script>
    $(document).ready(function(){
        $(".AddToCart").on("click", function(event){ 
            event.preventDefault();
            var id = $(this).data("id");    

            // je vais l'envoyer en AJAX
            $.ajax({
                url: "{{ path('app_modal_addtocart') }}",
                type: "GET",
                data: {id: id},
                dataType: 'json',
                async: true,
                success: function(data){
                    console.log(data);
                }
            });
        });
    });
</script>
